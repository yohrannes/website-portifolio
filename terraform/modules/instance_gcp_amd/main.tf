  boot_disk {
    auto_delete = true
    device_name = "instance-20241230-042935"

    initialize_params {
      image = "projects/ubuntu-os-cloud/global/images/ubuntu-2404-noble-amd64-v20241219"
      size  = 30
      type  = "pd-standard"
